@using System.Security.Claims
@{
    string photoUrl = ViewBag.PhotoPath as string;
    var avatarChar = string.IsNullOrWhiteSpace(User.Identity?.Name)
        ? "?"
        : User.Identity.Name.Substring(0, 1).ToUpper();
    string username = User.Identity?.Name ?? "";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Air Navigation services Management system</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/mediaLayout.css" rel="stylesheet" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
</head>

<body class="atc-body">
    <div class="atc-bg"></div>
    <!-- Navbar/Header -->
    <nav class="navbar navbar-expand-lg atc-navbar shadow-sm">
        <div class="container-fluid">
            <button class="btn btn-outline-success d-lg-none me-2" id="openSidebarBtn" type="button" aria-label="Menu">
                <i class="fa-solid fa-bars"></i>
            </button>
            <span class="navbar-brand fw-bold fs-3">✈️ ANS Management System</span>
            <div class="d-flex align-items-center">
                @if (!string.IsNullOrEmpty(photoUrl))
                {
                    <img src="@photoUrl" class="atc-avatar-img me-2" alt="User Avatar" />
                }
                else
                {
                    <span class="atc-avatar me-2">@avatarChar</span>
                }
                <span class="me-3">@username</span>
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger btn-sm ms-2">Logout</button>
                </form>
            </div>
        </div>
    </nav>

    <!-- Sidebar Overlay (mobile only) -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>
    <div class="d-flex">
        <!-- Sidebar -->
        <aside class="atc-sidebar p-3" id="sidebarMenu">
            <div class="sidebar-logo mb-3 fs-5 fw-bold">
                <i class="bi bi-tower"></i> ANS Panel
            </div>
            <ul class="nav flex-column gap-2">
                @if (User.IsInRole("Admin"))
                {
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Dashboard" ? "active" : "")"
                           asp-controller="Dashboard" asp-action="Index">
                            <i class="bi bi-bar-chart"></i> Dashboard
                        </a>
                    </li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Country" ? "active" : "")" href="/Country"><i class="bi bi-globe"></i> Organizational Structure</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Airport" ? "active" : "")" href="/Airport"><i class="bi bi-airplane"></i> Divisions</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "ControllerUser" ? "active" : "")" href="/ControllerUser"><i class="bi bi-person-badge"></i> Controllers</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Employees" ? "active" : "")" asp-controller="Employees" asp-action="Index"><i class="bi bi-people-fill"></i> AIS/ CNS/ AFTN/ Ops Staff</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "License" ? "active" : "")" href="/License/Index"><i class="bi bi-card-checklist"></i> Licenses & Permissions</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Certificate" ? "active" : "")" href="/Certificate/Index"><i class="bi bi-award"></i> Documents & Certificates</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Observations" ? "active" : "")" href="/Observations/Index"><i class="bi bi-binoculars"></i> Observations</a></li>
                    <li><a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Projects" ? "active" : "")" href="/Projects/Index"><i class="bi bi-binoculars"></i> Courses</a></li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")" href="/Account/Notifications">
                            <i class="bi bi-bell"></i>
                            Notifications @await Component.InvokeAsync("NotificationCount")
                        </a>
                    </li>
                }
                @if (User.IsInRole("Controller"))
                {
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")" href="/Account/Notifications">
                            <i class="bi bi-bell"></i>
                            Notifications @await Component.InvokeAsync("NotificationCount")
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")" href="/Account/Profile">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                }
                @if (User.IsInRole("SuperVisor OJAI"))
                {
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")" href="/Account/Notifications">
                            <i class="bi bi-bell"></i>
                            Notifications @await Component.InvokeAsync("NotificationCount")
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")" href="/Account/Profile">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                }
                @if (User.IsInRole("SuperVisor TACC"))
                {
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")" href="/Account/Notifications">
                            <i class="bi bi-bell"></i>
                            Notifications @await Component.InvokeAsync("NotificationCount")
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")" href="/Account/Profile">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                }
                @if (User.IsInRole("AIS Admin"))
                {
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")" href="/Account/Notifications">
                            <i class="bi bi-bell"></i>
                            Notifications @await Component.InvokeAsync("NotificationCount")
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")" href="/Account/Profile">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                }
                @if (User.IsInRole("Employee"))
                {
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Notifications" ? "active" : "")" href="/Account/Notifications">
                            <i class="bi bi-bell"></i>
                            Notifications @await Component.InvokeAsync("NotificationCount")
                        </a>
                    </li>
                    <li>
                        <a class="nav-link @(ViewContext.RouteData.Values["controller"]?.ToString() == "Account" && ViewContext.RouteData.Values["action"]?.ToString() == "Profile" ? "active" : "")" href="/Account/Profile">
                            <i class="bi bi-person"></i> Profile
                        </a>
                    </li>
                }

            </ul>
        </aside>
        <button id="openSidebarBtn" title="Menu" style="display:none;">
            <i class="bi bi-list"></i>
        </button>
        <div class="overlay-bg" id="sidebarOverlay"></div>
        <!-- Main Content -->
        <main class="atc-main-content p-4 flex-grow-1">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted text-center py-3 mt-auto small border-top">
        &copy; 2025 - Air Navigation services Management system

    </footer>

    <!-- *** SCRIPT LOADING FIX *** -->
    <!-- 1. Load main libraries first -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- 2. Load sidebar script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            var openBtn = document.getElementById('openSidebarBtn');
            var sidebar = document.querySelector('.atc-sidebar');
            var overlay = document.getElementById('sidebarOverlay');

            if (openBtn) {
                openBtn.onclick = function () {
                    sidebar.classList.add('active');
                    overlay.classList.add('active');
                }
            }
            if (overlay) {
                overlay.onclick = function () {
                    sidebar.classList.remove('active');
                    overlay.classList.remove('active');
                }
            }
        });
    </script>

    <!-- 3. Render page-specific scripts LAST, after all main libraries are loaded -->
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>
