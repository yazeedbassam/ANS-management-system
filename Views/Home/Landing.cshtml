@{
    ViewData["Title"] = "Home Page - Air Traffic Control Management System";
}

<style>
    /* Professional design for the index page */
    .hero-section {
        position: relative;
        min-height: 500px;
        display: flex;
        align-items: center;
        overflow: hidden;
        background: linear-gradient(rgba(0, 20, 40, 0.7), rgba(0, 20, 40, 0.5)), url('/images/CARC222.jpg');
        background-size: cover;
        background-position: center;
        color: white;
        padding: 60px 0;
        margin-bottom: 40px;
        border-radius: 8px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
    }

    .hero-content {
        position: relative;
        z-index: 10;
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
        text-align: center;
    }

    .hero-title {
        font-size: 3.2rem;
        font-weight: 700;
        margin-bottom: 20px;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
        animation: fadeInDown 1s ease-out;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        font-weight: 300;
        margin-bottom: 30px;
        line-height: 1.6;
        text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
        animation: fadeInUp 1s ease-out 0.3s;
        animation-fill-mode: both;
    }

    .cta-button {
        display: inline-block;
        background: linear-gradient(135deg, #ff6b6b 0%, #e53935 100%);
        color: white;
        font-size: 1.1rem;
        font-weight: 600;
        padding: 12px 30px;
        border-radius: 50px;
        text-decoration: none;
        transition: all 0.3s ease;
        box-shadow: 0 4px 15px rgba(229, 57, 53, 0.4);
        margin-top: 10px;
        animation: fadeInUp 1s ease-out 0.6s;
        animation-fill-mode: both;
    }

        .cta-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 20px rgba(229, 57, 53, 0.6);
        }

    /* Features section */
    .features-section {
        padding: 60px 0;
        background-color: #f8f9fa;
        border-radius: 8px;
        margin-bottom: 40px;
    }

    .section-title {
        text-align: center;
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 50px;
        color: #0d2b45;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin: 0 auto;
        max-width: 1200px;
        padding: 0 20px;
    }

    .feature-card {
        background: white;
        border-radius: 8px;
        padding: 30px;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        text-align: center;
    }

        .feature-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .feature-icon {
        font-size: 2.5rem;
        margin-bottom: 20px;
        color: #0d6efd;
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: 600;
        margin-bottom: 15px;
        color: #0d2b45;
    }

    .feature-description {
        color: #6c757d;
        line-height: 1.6;
    }

    /* Stats section */
    .stats-section {
        padding: 60px 0;
        background: linear-gradient(135deg, #0d2b45 0%, #1a4a74 100%);
        color: white;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 40px;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 30px;
        max-width: 1000px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .stat-item {
        padding: 20px;
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 700;
        margin-bottom: 10px;
        background: linear-gradient(135deg, #ff6b6b 0%, #e53935 100%);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
    }

    .stat-label {
        font-size: 1.1rem;
        opacity: 0.9;
    }

    /* Quote section */
    .quote-section {
        padding: 80px 0;
        background-color: #f8f9fa;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 40px;
    }

    .quote-content {
        max-width: 800px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .quote-text {
        font-size: 1.8rem;
        font-style: italic;
        line-height: 1.6;
        color: #0d2b45;
        margin-bottom: 20px;
    }

    .quote-author {
        font-size: 1.2rem;
        font-weight: 600;
        color: #6c757d;
    }

    /* Call to action section */
    .cta-section {
        padding: 60px 0;
        background: linear-gradient(rgba(0, 20, 40, 0.8), rgba(0, 20, 40, 0.8)), url('/images/atc_tower.jpeg');
        background-size: cover;
        background-position: center;
        color: white;
        text-align: center;
        border-radius: 8px;
        margin-bottom: 40px;
    }

    .cta-content {
        max-width: 700px;
        margin: 0 auto;
        padding: 0 20px;
    }

    .cta-title {
        font-size: 2.5rem;
        font-weight: 700;
        margin-bottom: 20px;
    }

    .cta-description {
        font-size: 1.2rem;
        margin-bottom: 30px;
        line-height: 1.6;
    }


    /* Animated aircraft effects */
    .animated-aircraft-container {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        z-index: 5;
        pointer-events: none;
        overflow: hidden;
    }

    .animated-aircraft {
        position: absolute;
        opacity: 0.7;
        filter: drop-shadow(0 0 8px rgba(255, 255, 255, 0.3));
        will-change: transform, opacity;
    }

    .aircraft-1 {
        width: 120px;
        height: 60px;
        top: 15%;
        left: -120px;
        animation: fly-right 30s linear infinite;
    }

    .aircraft-2 {
        width: 100px;
        height: 50px;
        top: 60%;
        right: -100px;
        animation: fly-left 25s linear infinite;
        animation-delay: 5s;
    }

</style>

