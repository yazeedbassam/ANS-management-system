                <path class="airplane-wing" d="M40,15 L60,5 L70,15 L40,15 Z" fill="#f8f9fa" stroke="#0d6efd" stroke-width="1" />
                <path class="airplane-wing" d="M40,25 L60,35 L70,25 L40,25 Z" fill="#f8f9fa" stroke="#0d6efd" stroke-width="1" />
