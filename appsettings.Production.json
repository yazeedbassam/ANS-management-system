{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "ConnectionStrings": {
    "SqlServerDbConnection": "${DATABASE_URL}"
  },
  "AllowedHosts": "*",
  "SmtpSettings": {
    "Server": "${SMTP_SERVER}",
    "Port": "${SMTP_PORT}",
    "Username": "${SMTP_USERNAME}",
    "Password": "${SMTP_PASSWORD}",
    "ReceiverEmail": "${RECEIVER_EMAIL}"
  }
} 